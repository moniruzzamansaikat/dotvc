@model YourProjectName.Models.Item

@{
    var message = "my amazing fucking message";
    var names   = new string[] {
        "Saikat", "Daikat", "Kaihat", "Baikat"
    };
}

<h3>Names</h3>
<ul>
    @foreach(var name in names) {
        <li>@name</li>
    }
</ul>

<h3>@message</h3>

<div class="text-center">
    <h1 class="display-4">Overview for product id - @Model.Id</h1>
    <p>Name: @Model.Name</p>
    <p>Price: @Model.Price</p>
</div>
