@model List<YourProjectName.Models.Item>

@{
  ViewData["Title"] = "Items";
}

<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Description</th>
        <th>Category</th>
        <th>Serial Number</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in Model)
      {
        <tr>
          <td>@item.Name</td>
          <td>@item.Price</td>
          <td>@(item.Description ?? "N/A")</td>
          <td>@item.Category?.Name</td>
          <td>@item.SerialNumber?.Number</td>
          <td>
            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
              <form method="post" asp-action="Delete" asp-route-id="@item.Id" class="d-inline">
                <button type="submit" class="btn btn-link btn-sm">Delete</button>
              </form>
          </td>
        </tr>
      }
    </tbody>
  </table>
</div>